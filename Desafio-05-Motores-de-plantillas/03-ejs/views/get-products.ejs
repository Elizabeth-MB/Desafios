<%- include('./partials/head.ejs') %>

    <h3 class="text-center m-2 text-white">Products</h3>


    <div class="container d-grid gap-2 d-md-flex justify-content-md-end">

        <a href="/" class="btn btn-success stretched-link">+ Create a new Product</a>
    </div>

    <div class="container form-control mt-5 p-5">

        <% if(products.length>0) { %>


            <table class="table table-striped table-hover border">
                <thead>
                    <tr class="text-center">
                        <th scope="col">ID</th>
                        <th scope="col">Product</th>
                        <th scope="col">Price</th>
                        <th scope="col">Thumbnail</th>
                    </tr>
                </thead>
                <tbody>
                    <% products.forEach(item=> { %>
                        <tr class="text-center">
                            <th scope="row">
                                <%= item.id %>
                            </th>
                            <td>
                                <%= item.title %>
                            </td>
                            <td>
                                $<%= item.price %>
                            </td>
                            <td><img src="<%= item.thumbnail %>" width="50"></td>
                        </tr>
                        <% }) %>
                            <% } else { %>
                                <p class="text-center"><strong>No hay datos</strong></p>
                                <% } %>
                </tbody>

            </table>
    </div>

    <%- include('./partials/foot.ejs') %>