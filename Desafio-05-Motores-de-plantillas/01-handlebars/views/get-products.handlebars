<h3 class="text-center m-2 text-white">Products</h3>


<div class="container d-grid gap-2 d-md-flex justify-content-md-end">

    <a href="/" class="btn btn-success">+ Create a new Product</a>
</div>

<div class="container form-control mt-5 p-5">

    {{#if products}}

    <table class="table table-striped table-hover border">
        <thead>
            <tr class="text-center">
                <th scope="col">ID</th>
                <th scope="col">Product</th>
                <th scope="col">Price</th>
                <th scope="col">Thumbnail</th>
            </tr>
        </thead>
        <tbody>
            {{#each products}}
            <tr class="text-center">
                <th scope="row">
                    {{this.id}}
                </th>
                <td>
                    {{this.title}}
                </td>
                <td>
                    $ {{this.price}}
                </td>
                <td><img src={{this.thumbnail}} width="50"></td>
            </tr>
            {{/each}}
            {{else}}

            <p class="text-center"><strong>No hay datos</strong></p>
            {{/if}}
        </tbody>

    </table>
</div>